<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/seps_1"
        android:id="@+id/faq_title_text_view"
        android:textSize="25sp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:text="@string/frequently_asked_questions_title"/>

    <View
        app:layout_constraintTop_toBottomOf="@id/faq_title_text_view"
        app:layout_constraintBottom_toTopOf="@id/help_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/seps_1"
        android:background="@color/blackTranslucent"
        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seps_1"
        android:id="@+id/help_title_text_view"
        android:textSize="25sp"
        android:layout_margin="15dp"
        android:text="@string/help_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>